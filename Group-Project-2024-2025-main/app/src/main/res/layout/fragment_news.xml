<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SCREEN"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/ic_user"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:focusable="true"
            android:src="@drawable/ic_user"
            android:background="@color/black"
            android:clickable="true"
            android:layout_marginStart="16dp"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/app_name"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="@string/video_part_title"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textColor="#070089"/>

        <ImageView
            android:id="@+id/aa"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:focusable="true"
            android:src="@drawable/avoid_red"
            android:background="@color/white"
            android:clickable="true"
            android:layout_marginEnd="16dp"
            android:layout_gravity="end" />

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/toolbar"
        android:background="@drawable/round_corner">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:src="@drawable/app_logo"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/search_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search..."
            android:textColorHint="@color/black"
            android:padding="12dp"
            android:drawablePadding="8dp"/>

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/search_icon"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <ScrollView
        android:id="@+id/news"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/SCREEN"
        android:layout_below="@id/search_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/highlight"
                android:background="#67D6FE">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_user"
                    android:id="@+id/firehere">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="highlight today:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/firehere">
                </TextView>
                <HorizontalScrollView
                    android:id="@+id/highlightScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_below="@id/firehere">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageButton
                            android:id="@+id/test_to_show_news1"
                            android:layout_width="275dp"
                            android:layout_height="200dp"
                            style="@style/SCREEN"
                            android:src="@drawable/avoid_red"
                            tools:ignore="MissingConstraints" />

                        <ImageButton
                            android:id="@+id/test_to_show_news2"
                            android:layout_width="275dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            style="@style/SCREEN"
                            android:src="@drawable/avoid_red"
                            tools:ignore="MissingConstraints" />

                        <ImageButton
                            android:id="@+id/test_to_show_news3"
                            android:layout_width="275dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            style="@style/SCREEN"
                            android:src="@drawable/avoid_red"
                            tools:ignore="MissingConstraints" />

                        <ImageButton
                            android:id="@+id/test_to_show_news4"
                            android:layout_width="275dp"
                            android:layout_height="200dp"
                            android:layout_marginStart="10dp"
                            style="@style/SCREEN"
                            android:src="@drawable/avoid_red"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/brand1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/highlight">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/namebrand1"
                    android:text="SAMSUNG"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp">
                </TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_to_show_news5"
                    android:layout_below="@id/namebrand1">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:src="@drawable/samsung_logo"
                        android:layout_alignParentLeft="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="150dp"
                        android:textSize="20sp"
                        android:text="so what if I write in just a line but it is so so long, oh it seem fine"
                        style="@style/TEXT">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_to_show_news6">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:src="@drawable/samsung_logo"
                        android:layout_alignParentLeft="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="150dp"
                        android:textSize="20sp"
                        style="@style/TEXT"
                        android:text="ashfjhafjha\nasdjfhjshfda\nsadhfjuh">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_to_show_news7">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:src="@drawable/samsung_logo"
                        android:layout_alignParentLeft="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="150dp"
                        android:textSize="20sp"
                        style="@style/TEXT"
                        android:text="ashfjhafjha\nasdjfhjshfda\nsadhfjuh">
                    </TextView>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/brand2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/brand1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/namebrand2"
                    android:text="SAMSUNG"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp">
                </TextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_to_show_news8"
                    android:layout_below="@id/namebrand2">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:src="@drawable/samsung_logo"
                        android:layout_alignParentLeft="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="150dp"
                        android:textSize="20sp"
                        android:text="so what if I write in just a line but it is so so long, oh it seem fine"
                        style="@style/TEXT">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_to_show_news9">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:src="@drawable/samsung_logo"
                        android:layout_alignParentLeft="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="150dp"
                        android:textSize="20sp"
                        style="@style/TEXT"
                        android:text="ashfjhafjha\nasdjfhjshfda\nsadhfjuh">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_to_show_news10">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="80dp"
                        android:src="@drawable/samsung_logo"
                        android:layout_alignParentLeft="true">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="150dp"
                        android:textSize="20sp"
                        style="@style/TEXT"
                        android:text="ashfjhafjha\nasdjfhjshfda\nsadhfjuh">
                    </TextView>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
